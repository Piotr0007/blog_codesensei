<%= render 'shared/errors', model: @comment %>
<%= form_for([ @article, @comment]) do |f| %>

<div class ="form_group">
	<%= f.label :commenter %>
	<%= f.text_field :commenter, class: "form-control", placeholder: "Comment" %>
</div>

 <div class ="form_group">
	<%= f.label :body %>
	<%= f.text_area :body, class: "form-control", placeholder: "Text"  %>

</div>
<p>
	<%=f.submit class: "btn btn-default" %>

</p> 
<% end %>








